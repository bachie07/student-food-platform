generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlaceType{

  CAFE 
  GROCERY 
  RESTAURANT

}

enum UserRole{

  HIGH_SCHOOL
  UNIVERSITY
  GENERAL
}


model User{

  id String @id @default(cuid())

  email String @unique

  name String?

  username String @unique

  password String 

  school String

  role UserRole @default(UNIVERSITY)

  createdAt DateTime @default(now())

  updatedAT DateTime @updatedAt

  deletedAt DateTime?


  //relations

  authoredRecipe Recipe[]

  addedPlace Place[] @relation("AddedPlaces")

  savedRecipes SavedRecipe[]

  savedPlaces SavedPlace[]

  


}


model Recipe{

  id String @id @default(cuid())

  title String

  timeTaken String

  ingredients String

  instructions String

  cost Float?

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt 

  deletedAt DateTime?

  //update fields for future features

  imageUrl String? // store image

  latitude Float? // for map

  longitude Float? // for map

  tags String[]  // filtering 

  description String? 

  viewCount Int @default(0)

  saveCount Int @default(0)

  // Indexes
  @@index([userId])
  @@index([createdAt])
  @@index([deletedAt])


  

  //relations

  user User @relation(fields: [userId], references: [id])

  userId String

  savedRecipes SavedRecipe[]




}

model SavedRecipe{

  id String @id @default(cuid())

  user User @relation(fields:[userId], references:[id])

  userId String

  recipe Recipe @relation(fields:[recipeId], references: [id])

  recipeId String

  @@unique([userId, recipeId])
  @@index([userId])

}




model Place{

  id String @id @default(cuid())

  name String

  address String

  placeType PlaceType

  minPrice Float?

  maxPrice Float?

  createdAt DateTime @default(now())

  updatedAt DateTime @updatedAt 

  deletedAt DateTime?


  //update fields for future features
  imageUrl String? // store image

  latitude Float? // for map

  longitude Float? // for map

  tags String[]  // filtering 

  description String? 
  
  viewCount Int @default(0)

  saveCount Int @default(0)


  //relations

  savedPlaces SavedPlace[]

  addedBy User @relation("AddedPlaces", fields:[addedById], references: [id])

  addedById String

   // Indexes
  @@index([addedById])
  @@index([createdAt])
  @@index([deletedAt])
  @@index([placeType])
  @@index([latitude, longitude])

}



model SavedPlace{

  id String @id @default(cuid())

  user User @relation(fields:[userId], references:[id])

  userId String

  place Place @relation(fields:[placeId], references:[id])

  placeId String

  @@unique([userId, placeId])
  @@index([userId])

}


